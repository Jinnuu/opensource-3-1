<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F7">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- 필터 및 전체 개수 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/body"
            android:drawableLeft="@drawable/body"
            android:drawablePadding="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="모두 (510)"
            android:textColor="#222222"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 운동 리스트 (스크롤 가능) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutExerciseList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">



            <!-- 운동 아이템: V 업 -->
            <LinearLayout
                android:id="@+id/item_vup"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    tools:ignore="DuplicateIds">

                    <Button
                        android:id="@+id/btnst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 운동 아이템: V 업 · 덤벨 -->
            <LinearLayout
                android:id="@+id/item_vup_dumbbell"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btnVup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 운동 아이템: V 업 · 밴드 -->
            <LinearLayout
                android:id="@+id/item_vup_band"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btnqw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>


            <!-- 운동 아이템: 고릴라 친 크런치 -->
            <LinearLayout
                android:id="@+id/item_gorilla_crunch"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>



            <!-- 운동 아이템: 글루트 브릿지 -->
            <LinearLayout
                android:id="@+id/item_glute_bridge"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btnas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="둔근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 플로팅 액션 버튼 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/btnAddExercise"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="end"
                    android:background="@drawable/body"
                    android:src="@drawable/body"
                    android:contentDescription="운동 추가"
                    app:tint="@color/design_default_color_background" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
