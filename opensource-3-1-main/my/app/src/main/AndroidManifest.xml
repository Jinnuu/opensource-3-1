<?xml version="1.0" encoding="utf-8"?>
<!-- 안드로이드 앱 매니페스트 파일 -->
<!-- 앱의 기본 설정, 권한, 액티비티 구성 등을 정의 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 접근 권한 -->
    <!-- 서버와의 HTTP 통신을 위해 필요 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 앱의 기본 설정 -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.My"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- 메인 액티비티 - 앱의 핵심 화면 -->
        <!-- 하단 탭 네비게이션을 통해 각 기능 화면으로 이동 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        
        <!-- 회원가입 액티비티 - 새로운 사용자 등록 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true">
        </activity>
        
        <!-- 로그인 액티비티 - 앱 시작점 -->
        <!-- MAIN 액션과 LAUNCHER 카테고리로 앱 아이콘 클릭 시 실행 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 운동 액티비티 - 운동 목록 및 가이드 제공 -->
        <activity
            android:name=".ExerciseActivity"
            android:exported="true">
        </activity>
        
        <!-- 루틴 관리 액티비티 - 커스텀 운동 루틴 관리 -->
        <!-- exported="false"로 설정하여 다른 앱에서 직접 접근 불가 -->
        <activity
            android:name=".RoutineManagementActivity"
            android:exported="false" />
            
        <!-- 커스텀 운동 액티비티 - 사용자 정의 운동 생성 -->
        <activity
            android:name=".CustomExerciseActivity"
            android:exported="false" />
            
        <!-- 신체 설정 액티비티 - 운동 부위 선택 및 설정 -->
        <activity
            android:name=".Body_Setting"
            android:exported="false" />
            
        <!-- 가이드 액티비티 - 앱 사용법 안내 -->
        <activity
            android:name=".Guide_Activity"
            android:exported="false" />
            
        <!-- 운동 가이드 액티비티 - 개별 운동 동작 설명 -->
        <activity
            android:name=".ExerciseGuideActivity"
            android:exported="false" />
    </application>

</manifest>