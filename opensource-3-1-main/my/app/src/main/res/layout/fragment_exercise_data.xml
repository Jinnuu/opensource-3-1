<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F7">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- 필터 및 전체 개수 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="모두 (510)"
            android:textSize="14sp"
            android:background="@drawable/bg_filter"
            android:textColor="#222222"
            android:drawableLeft="@drawable/ic_filter"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
    </LinearLayout>

    <!-- 운동 리스트 (스크롤 가능) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutExerciseList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- 구분자: V -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V"
                android:textColor="#888888"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp" />

            <!-- 운동 아이템: V 업 -->
            <LinearLayout
                android:id="@+id/item_vup"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_exercise_item"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_vup" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 운동 아이템: V 업 · 덤벨 -->
            <LinearLayout
                android:id="@+id/item_vup_dumbbell"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_exercise_item"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_vup_dumbbell" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업 · 덤벨"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 운동 아이템: V 업 · 밴드 -->
            <LinearLayout
                android:id="@+id/item_vup_band"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_exercise_item"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_vup_band" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업 · 밴드"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 구분자: 고 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고"
                android:textColor="#888888"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp" />

            <!-- 운동 아이템: 고릴라 친 크런치 -->
            <LinearLayout
                android:id="@+id/item_gorilla_crunch"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_exercise_item"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_gorilla_crunch" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고릴라 친 크런치"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 구분자: 글 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글"
                android:textColor="#888888"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp" />

            <!-- 운동 아이템: 글루트 브릿지 -->
            <LinearLayout
                android:id="@+id/item_glute_bridge"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_exercise_item"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_glute_bridge" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글루트 브릿지"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="둔근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- 플로팅 액션 버튼 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/btnAddExercise"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="end"
                    android:background="@drawable/bg_fab"
                    android:src="@drawable/ic_add"
                    android:contentDescription="운동 추가"
                    android:tint="#FFFFFF" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>
