<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAF9"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17B978"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환경 설정"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 프로필 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 프로필"
                    android:textColor="#17B978"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="재활 부위 선택"
                    android:textColor="#FFFFFF"
                    android:icon="@android:drawable/ic_menu_myplaces"
                    android:iconTint="#FFFFFF"
                    android:iconPadding="10dp"
                    android:backgroundTint="#17B978"
                    android:cornerRadius="16dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 프로필을 설정하고 맞춤형 재활 서비스를 받아보세요."
                    android:textColor="#7CB342"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
            </LinearLayout>

            <!-- 가이드 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="어플 사용 가이드"
                    android:textColor="#17B978"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAppGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가이드 보기"
                    android:textColor="#17B978"
                    android:icon="@android:drawable/ic_menu_help"
                    android:iconTint="#17B978"
                    android:iconPadding="10dp"
                    android:backgroundTint="#E6FFF2"
                    android:cornerRadius="16dp"
                    android:strokeColor="#17B978"
                    android:strokeWidth="2dp"
                    android:elevation="0dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱의 주요 기능과 활용법을 한눈에 확인할 수 있습니다."
                    android:textColor="#7CB342"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
            </LinearLayout>

            <!-- 계정 섹션 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="18dp"
                android:elevation="2dp"
                android:backgroundTint="#FFFFFF"
                android:clipToOutline="true"
                android:layout_gravity="center_horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:background="@drawable/rounded_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정"
                    android:textColor="#17B978"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="아이디"
                        android:textColor="#222222"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jkh0413"
                        android:textColor="#7CB342"
                        android:textSize="15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 변경"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/tvChangeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일 변경"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>
            </LinearLayout>

            <!-- 기타 섹션 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:elevation="2dp"
                android:backgroundTint="#FFFFFF"
                android:clipToOutline="true"
                android:layout_gravity="center_horizontal"
                android:clipChildren="false"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textColor="#17B978"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvInfoConsent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정보 동의 설정"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/tvWithdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원 탈퇴"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
