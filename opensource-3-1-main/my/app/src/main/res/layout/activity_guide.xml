<?xml version="1.0" encoding="utf-8"?>
<!-- 가이드 화면 레이아웃: 앱 사용법을 소개하는 온보딩 화면 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Guide_Activity">

    <!-- 스크롤 가능한 주요 내용 영역 -->
    <!-- 사용자가 세로로 스크롤하여 모든 가이드 카드를 볼 수 있도록 함 -->
    <ScrollView
        android:id="@+id/guideScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 스크롤 내부의 컨텐츠를 담는 컨테이너 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal">

            <!-- 첫 번째 기능 소개 카드: 커스텀 워크아웃 루틴 -->
            <!-- 사용자가 자신만의 운동 루틴을 만들 수 있다는 것을 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="520dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="28dp"
                android:layout_marginBottom="32dp"
                android:elevation="6dp"
                android:gravity="top|center_horizontal">

                <!-- 기능 설명 텍스트 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나만의 커스텀 워크아웃 루틴을 쉽고 빠르게 만들 수 있습니다."
                    android:textSize="19sp"
                    android:textColor="@color/primaryGreen"
                    android:textStyle="bold"
                    android:lineSpacingExtra="7dp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- 기능을 시각적으로 표현하는 아이콘 이미지 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_custom_routine"
                    android:contentDescription="커스텀 루틴 이미지"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <!-- 두 번째 기능 소개 카드: 운동 데이터베이스 -->
            <!-- 다양한 운동 정보에 접근할 수 있다는 것을 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="520dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="28dp"
                android:layout_marginBottom="32dp"
                android:elevation="6dp"
                android:gravity="top|center_horizontal">

                <!-- 기능 설명 텍스트 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="다양한 운동 데이터베이스에 자유롭게 액세스할 수 있습니다."
                    android:textSize="19sp"
                    android:textColor="@color/primaryGreen"
                    android:textStyle="bold"
                    android:lineSpacingExtra="7dp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- 기능을 시각적으로 표현하는 아이콘 이미지 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_workout_db"
                    android:contentDescription="운동 데이터베이스 이미지"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <!-- 세 번째 기능 소개 카드: 진척도 트래킹 리포트 -->
            <!-- 운동 진행 상황을 차트로 확인할 수 있다는 것을 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="520dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="28dp"
                android:elevation="6dp"
                android:gravity="top|center_horizontal">

                <!-- 기능 설명 텍스트 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="진척도 트래킹을 위한 직관적인 도표 리포트 기능을 제공합니다."
                    android:textSize="19sp"
                    android:textColor="@color/primaryGreen"
                    android:textStyle="bold"
                    android:lineSpacingExtra="7dp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- 기능을 시각적으로 표현하는 아이콘 이미지 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_report_chart"
                    android:contentDescription="진척도 리포트 이미지"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 고정 버튼: 앱 사용 시작 -->
    <!-- 사용자가 가이드를 모두 읽고 앱을 시작할 수 있는 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primaryGreen"
        app:cornerRadius="32dp"
        android:layout_margin="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>