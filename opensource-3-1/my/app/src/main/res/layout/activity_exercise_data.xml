<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F7">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <!-- 필터 & 검색창 한 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <!-- "모두" 버튼 -->
        <Button
            android:id="@+id/btnFilterAll"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="모두"
            android:textColor="#3366FF"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>

        <!-- 검색창 -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:hint="운동 검색"
            android:background="@drawable/rounded_white_bg"
            android:paddingStart="12dp"
            android:textColor="#222222"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 하위 필터 버튼 영역 (기본 숨김) -->
    <LinearLayout
        android:id="@+id/layoutSubFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btnFilterBack"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="등"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterShoulder"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="어깨"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterArm"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="팔"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterChest"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="가슴"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterAbs"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="복근"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterGlutes"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="엉덩이"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterLeg"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="다리"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnFilterWhole"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="전신"
            android:textColor="#222222"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <!-- 운동 리스트 (스크롤 가능) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutExerciseList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- 운동 아이템 예시: 복붙해서 추가 -->
            <LinearLayout
                android:id="@+id/item_vup"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_vup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_glute_bridge"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_brige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_pullup"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_pullup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_shoulder_press"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_shoulderpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_biceps_curl"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_bicep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_bench_press"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_bench"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_squat"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btn_sq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_burpee"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:background="@drawable/body"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/body" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/btnst_burpee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 업"
                        android:textSize="17sp"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복근"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>
            <!-- ... (다른 운동 아이템도 동일하게 추가) ... -->

            <!-- 플로팅 액션 버튼 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/btnAddExercise"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="end"
                    android:background="@drawable/body"
                    android:src="@drawable/body"
                    android:contentDescription="운동 추가"
                    app:tint="@color/design_default_color_background" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
